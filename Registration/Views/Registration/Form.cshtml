@model Registration.Models.Registrations

@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Form", "Registration", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger"})
    <p>Twoje imie: @Html.TextBoxFor(a => a.Imie)</p>
    <p>Twoje nazwisko: @Html.TextBoxFor(a => a.Nazwisko)</p>
    <p>Podaj haslo: @Html.TextBoxFor(a => a.Password)</p>
    <p>Potwierdz haslo: @Html.TextBoxFor(a => a.ConfirmPassword)</p>
    <p>Podaj numer telefonu: @Html.TextBoxFor(a => a.PhoneNumber)</p>
    <p>Podaj wiek: @Html.TextBoxFor(a => a.Age)</p>
    <p>Podaj miasto: @Html.DropDownListFor(a => a.Miasto, new SelectList(Enum.GetValues(typeof(Miasta))))</p>

    <input type="submit"/>
}
